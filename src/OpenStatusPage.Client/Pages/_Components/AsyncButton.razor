@inherits MudButton

<MudButton 
    Class="@Classname" 
    Style="@Style"
    StartIcon=@StartIcon
    EndIcon=@EndIcon
    FullWidth=@FullWidth
    Variant=@Variant
    Color=@Color
    HtmlTag=@HtmlTag
    ButtonType=@ButtonType
    Link=@Link
    Target=@Target
    DisableElevation=@DisableElevation
    DisableRipple=@DisableRipple
    Command=@Command
    CommandParameter=@CommandParameter
    Disabled=@ActionRunning
    @onclick="OnClickHandlerAsync">

@if (ActionRunning)
{
    <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
    <MudText Class="ms-2">@RunningText</MudText>
}
else
{
    @ChildContent
}

</MudButton>